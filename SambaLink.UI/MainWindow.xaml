<Window x:Class="SambaLink.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SambaLink.UI"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button 
            Name="StartServiceButton"
            Content="StartService" 
            HorizontalAlignment="Center" 
            VerticalAlignment="Center" 
            Width="120"
            Height="40"
            Margin="130,0,0,0"
            Click="StartServiceButton_Click"
            />
        <Button 
            Name="StopServiceButton"
            Content="StopService" 
            HorizontalAlignment="Center" 
            VerticalAlignment="Center" 
            Width="120"
            Height="40"
            Margin="0,0,130,0"
            Click="StopServiceButton_Click"
            />
    </Grid>
</Window>
